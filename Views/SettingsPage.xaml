<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:SillowApp.Components"
             x:Class="SillowApp.Views.SettingsPage"
             Title="Settings"
             BackgroundColor="#101728">

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="HamburgerButton" 
                Text="&#xE700;" 
                FontFamily="Segoe MDL2 Assets" 
                Clicked="HamburgerButton_Clicked"
                HorizontalOptions="Start" 
                VerticalOptions="Start"
                Margin="10" 
                BackgroundColor="#1E293B"
                TextColor="White"
                CornerRadius="8"
                Padding="10,0"
                HeightRequest="40"
                WidthRequest="40"
                ZIndex="10" 
                IsVisible="False"/>

        <components:NavMenu x:Name="NavMenuComponent" 
                            Grid.Column="0"
                            ZIndex="5" 
                            TranslationX="-200" 
                            WidthRequest="200"
                            HorizontalOptions="Start"/>

        <!-- Main content area -->
        <ScrollView x:Name="SettingsContent" Grid.Column="1">
            <VerticalStackLayout Padding="24" Spacing="20">

                <!-- Header -->
                <VerticalStackLayout Spacing="1">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Settings" FontSize="32" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                    </Grid>
                    <Label Text="Customize your Sillow workspace" FontSize="14" TextColor="#94A3B8"/>
                </VerticalStackLayout>

                <!-- Main content layout -->
                <Grid ColumnDefinitions="2.7*,2*" ColumnSpacing="20">

                    <!-- Left Section -->
                    <VerticalStackLayout Spacing="20" Grid.Column="0">

                        <!-- Profile Information -->
                        <Frame BackgroundColor="#161B22" CornerRadius="12" Padding="20" HasShadow="False">
                            <VerticalStackLayout Spacing="16">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="&#xE77B;"
                                           FontFamily="Segoe Fluent Icons"
                                           FontSize="18"
                                           TextColor="#F4A825" Margin="0,4,0,0"/>
                                    <Label Text="Profile Information"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                </HorizontalStackLayout>

                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Full Name" FontSize="12" TextColor="#A3A3A3"/>
                                    <Entry Text="{Binding FullName}"
                                            BackgroundColor="#1A1F29"
                                            TextColor="White"
                                            HeightRequest="40"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Phone" FontSize="12" TextColor="#A3A3A3"/>
                                    <Entry Text="{Binding Phone}"
                                            BackgroundColor="#1A1F29"
                                            TextColor="White"
                                            HeightRequest="40"/>
                                </VerticalStackLayout>
                                

                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Company Name" FontSize="12" TextColor="#A3A3A3"/>
                                    <Entry Text="{Binding CompanyName}"
                                           BackgroundColor="#1A1F29"
                                           TextColor="White"
                                           HeightRequest="40"/>
                                </VerticalStackLayout>

                            </VerticalStackLayout>
                        </Frame>

                        <!-- Workspace Modules -->
                        <Frame BackgroundColor="#161B22" CornerRadius="12" Padding="20" HasShadow="False">
                            <VerticalStackLayout Spacing="16">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="&#xE790;" FontFamily="Segoe Fluent Icons" FontSize="18" TextColor="#F4A825" Margin="0,4,0,0"/>
                                    <Label Text="Workspace Modules" FontSize="18" FontAttributes="Bold" TextColor="White"/>
                                </HorizontalStackLayout>

                                <Label Text="Enable or disable modules to customize your workspace" FontSize="14" TextColor="#A3A3A3"/>

                                <VerticalStackLayout Spacing="12" Padding="0,2,0,0">
                                    <!-- Jobs -->
                                    <Grid ColumnDefinitions="*,Auto" Padding="0 ,6, -80, 6" HorizontalOptions="Fill">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="Jobs" FontSize="16" TextColor="White" FontAttributes="Bold"/>
                                            <Label Text="Job management and scheduling" FontSize="12" TextColor="#A3A3A3"/>
                                        </VerticalStackLayout>
                                        <Switch x:Name="JobsToggle" IsToggled="True" Grid.Column="1" AutomationProperties.Name="Toggle Jobs Module"/>
                                    </Grid>

                                    <!-- CRM -->
                                    <Grid ColumnDefinitions="*,Auto" Padding="0 ,6, -80, 6" HorizontalOptions="Fill">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="CRM" FontSize="16" TextColor="White" FontAttributes="Bold"/>
                                            <Label Text="Customer relationship management" FontSize="12" TextColor="#A3A3A3"/>
                                        </VerticalStackLayout>
                                        <Switch x:Name="CRMtoggle" IsToggled="True" Grid.Column="1" AutomationProperties.Name="Toggle CRM Module"/>
                                    </Grid>

                                    <!-- Team -->
                                    <Grid ColumnDefinitions="*,Auto" Padding="0 ,6, -80, 6" HorizontalOptions="Fill">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="Team" FontSize="16" TextColor="White" FontAttributes="Bold"/>
                                            <Label Text="Time tracking and team management" FontSize="12" TextColor="#A3A3A3"/>
                                        </VerticalStackLayout>
                                        <Switch x:Name="TeamsToggle" IsToggled="True" Grid.Column="1" AutomationProperties.Name="Toggle Team Module"/>
                                    </Grid>

                                    <!-- Calendar -->
                                    <Grid ColumnDefinitions="*,Auto" Padding="0 ,6, -80, 6" HorizontalOptions="Fill">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="Calendar" FontSize="16" TextColor="White" FontAttributes="Bold"/>
                                            <Label Text="Visual job scheduling calendar" FontSize="12" TextColor="#A3A3A3"/>
                                        </VerticalStackLayout>
                                        <Switch x:Name="CalendarToggle" IsToggled="True" Grid.Column="1" AutomationProperties.Name="Toggle Calendar Module"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Frame>

                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="20" Grid.Column="1">
                        <!-- Account Info -->
                        <Frame BackgroundColor="#161B22" CornerRadius="12" Padding="20" HasShadow="False">
                            <VerticalStackLayout Spacing="12">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="&#xE779;"
                                           FontFamily="Segoe Fluent Icons"
                                           FontSize="20"
                                           TextColor="#F4A825" Margin="0,4,0,0"/>
                                    <Label Text="Account Info"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                </HorizontalStackLayout>

                                <Label Text="Email" FontSize="12" TextColor="#A3A3A3"/>
                                <Label Text="[UserEmail]" FontSize="13" TextColor="White" FontAttributes="Bold"/>

                                <Label Text="Role" FontSize="12" TextColor="#A3A3A3"/>
                                <Label Text="[UserRole]" FontSize="13" TextColor="White" FontAttributes="Bold"/>

                                <Label Text="Member Since" FontSize="12" TextColor="#A3A3A3"/>
                                <Label Text="[UserMemberSince]" FontSize="13" TextColor="White" FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Save Button -->
                        <Button Text="Save Changes" BackgroundColor="#F4A825" TextColor="Black" FontAttributes="Bold" HeightRequest="48" CornerRadius="8" Clicked="SaveButton_Clicked"/>
                    </VerticalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>

